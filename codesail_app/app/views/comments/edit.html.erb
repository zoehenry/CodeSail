<%= form_for @comment do |f| %>
  <%= f.label :author %>:
  <%= f.text_field :author %><br />

  <%= f.label :content %>:
  <%= f.text_field :content %><br />

  <%= f.label :stars %>:
  <%= f.text_field :stars %><br />

  <%= f.submit %>
<% end %>

<%= link_to "Delete this entry", comment_path(@comment.id), method: 'delete' %>
